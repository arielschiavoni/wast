<form class="form-horizontal one" id="sign-up-form">
  <div class="control-group">
    <h4>Sign Up</h4>
    <div class="controls">
      <input type="text" id="username" placeholder="Username" value="{{username}}" required>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <input type="email" id="email" placeholder="Email" value="{{email}}" required>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <input type="password" id="password" placeholder="Password" required>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <input type="password" id="repeat-password" placeholder="Repeat password" required>
    </div>
  </div>
  <div class="control-group">
    <div class="controls" id="image-file">

    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      {{#each errors}}
        <div class="alert alert-error">{{this}}</div>
      {{/each}}
      <button type="submit" class="btn btn-primary" id="sign-up-button">Sign Up</button>
    </div>
  </div>

</form>
